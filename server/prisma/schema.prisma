datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id
  name     String
  photoURL String?
  tasks    Task[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  User      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Service {
  id          String   @id
  area        String
  name        String?
  similarName String?
  status      String
  createdAt   DateTime
  ideas       Idea[]
}

model Idea {
  id          String    @id
  name        String
  description String
  status      String
  createdAt   DateTime
  feedback    Feedback?
  serviceId   String
  Service     Service   @relation(fields: [serviceId], references: [id])
}

model Feedback {
  id        String   @id
  feedback  String
  createdAt DateTime
  ideaId    String   @unique
  idea      Idea     @relation(fields: [ideaId], references: [id])
}
